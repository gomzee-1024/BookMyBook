<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_signup_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bmb.gk.bookmybook.LoginSignup.LogInSignUpActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/sign_in_bg"
        android:tint="@color/logInSignUpBackGroundTint"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_sign_in"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:tabIndicatorColor="@android:color/white"
        app:tabSelectedTextColor="@android:color/white"
        app:tabTextColor="@color/tabUnselectedTextColor">

    </android.support.design.widget.TabLayout>

</FrameLayout>
